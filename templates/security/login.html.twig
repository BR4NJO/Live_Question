{% extends 'base.html.twig' %}

{% block title %}Me connecter{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/style/login.css') }}" alt="">
{% endblock %}

{% block body %}
    <div class="login-profile-container">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="form-group">
                Vous êtes déjà connecté(e) en tant que {{ app.user.userIdentifier }}, 
                <a href="{{ path('app_logout') }}">Déconnexion</a>
            </div>
        {% endif %}

        <h1>Me connecter</h1>
        
        <form method="post">
            <div class="form-group">
                <label for="inputEmail" class="form-label">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
            </div>
            
            <div class="form-group">
                <label for="inputPassword" class="form-label">Mot de Passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input type="checkbox" name="_remember_me"> Se souvenir de moi
                    </label>
                </div>
            </div>

            <button class="btn-save" type="submit">
                Me connecter
            </button>



            <p>Pas encore inscrit(e) ? <a href="{{ path('app_register') }}">M'inscrire</a></p>
        </form>
    </div>
{% endblock %}
